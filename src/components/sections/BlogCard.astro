let posts: any = [];
---

<div class='mt-2 space-y-4'>
  {
    posts.map((project: any) => (
      <div>
        <h3 class='text-lg font-semibold text-primary'>
          <a
            href={`/posts/${project.slug}`}
            class='hover:underline line-clamp-2'
          >
            {project.data.title}
          </a>
        </h3>
        <p class='text-sm line-clamp-2'>{project.data.description}</p>
        <p class='text-sm text-gray-600'>
          {formateLocalDate(project.data.startDate)}{' '}
          {project.data?.endDate
            ? '- ' + formateLocalDate(project.data.endDate)
            : ''}
        </p>
      </div>
    ))
  }
  <a href='/posts'>
    <Button variant='link' className='pl-0'> View More</Button>
  </a>
</div>
